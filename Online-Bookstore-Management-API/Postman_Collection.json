    {
      "name": "Update Book",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"price\": 34.99,\n  \"inStock\": false\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/books/BOOK_ID",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "books", "BOOK_ID"]
        },
        "description": "Update a book. Replace BOOK_ID with actual ID"
      },
      "response": []
    },
