        "url": {
          "raw": "http://localhost:5000/api/books/BOOK_ID",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "books", "BOOK_ID"]
        },
        "description": "Delete a book. Replace BOOK_ID with actual ID"
