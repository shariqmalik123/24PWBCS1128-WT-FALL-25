          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Harry Potter and the Philosopher's Stone\",\n  \"author\": \"J.K. Rowling\",\n  \"genre\": \"Fantasy\",\n  \"price\": 39.99,\n  \"publishedDate\": \"1997-06-26\",\n  \"inStock\": true\n}"
